const img = document.querySelector('.grid');
const loader = document.querySelector('#gallery_anim');

window.addEventListener('load', () => {
  img.style.display = 'block';
  img.style.opacity = '1';
  loader.style.display = 'none';
  setTimeout(() => {
    getPost();
  }, 300);
});

// json


const getPost = async () => {
  const response = await fetch(`https://nhnishad.github.io/api/data.json`);
  const data = await response.json();

  data.map((curElm, index) => {
    let imgSrc = `${curElm.src}`;
    let imgAlt = `${curElm.alt}`;

    const htmlData = `
    <div class="grid-item">
     <img src='${imgSrc}' alt='${imgAlt}'/>
    </div>
    `;
    img.insertAdjacentHTML('beforeend', htmlData);
  });


}
